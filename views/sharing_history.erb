  <body>
    

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

  <div class="container marketing">
  <h1>Your history of sharing <small>Shares are private and only you can see them!</small></h1>

  <% @sharings.each do |share| %>
    <p class="lead inline"><strong><%=share[:question]%></strong>&nbsp;&nbsp; <font color="red"><%=share[:options][0]%> v.s. <%=share[:options][1]%></font></p>
    <p class="lead"><%=share[:asker_thought]%>&nbsp;&nbsp;<font color="grey"><small>you said.</small></font></p>
    
    <% if share[:answer] != "pass" and share[:answer] != nil%>
        <p class="lead"><%=share[:receiver_thought]%>&nbsp;&nbsp;<font color="grey"><small><%=share[:receiver]%> said.</small></font>&nbsp; &nbsp;âœ“ <font color="blue"><%=share[:answer]%></font></p>
    <% else %>
      <p class="lead"><%=share[:receiver]%> hasn't replied yet.</p>
    <% end  %>
  <hr>
  <% end %>
  
    
  <div class="text-center">
    <form class="form-horizontal" role="form" action="start" method="post">
      
      <button type="submit" class="btn btn-info btn-lg">Go Back!</button>
    </form>
  </div>
      <!-- FOOTER -->
      <footer>
        <p>If you are not <%=session[:tester]%>, please go back to <a href="/">home</a> and choose your name.</p>
        <p>&copy; 2014 Orrzs Inc.</p>
      </footer>

    </div><!-- /.container -->


